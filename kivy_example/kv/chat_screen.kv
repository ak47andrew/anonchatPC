<ChatScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: chat_title
            text: root.friend_name  # Set the title to friend's name
            font_size: 24
            size_hint_y: None
            height: 50
        ScrollView:
            BoxLayout:
                id: chat_display
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
        BoxLayout:
            size_hint_y: None
            height: 60
            padding: 10
            TextInput:
                id: message_input
                hint_text: 'Enter message'
                multiline: False
            Button:
                text: 'Send'
                size_hint_x: None
                width: 100
                on_release: root.send_message()
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: 'Back'
                on_release: root.go_back()
            Button:
                text: 'Placeholder 1'
            Button:
                text: 'Placeholder 2'