<LoadingSpinner>:
    size_hint: None, None
    size: 100, 100
    canvas.before:
        Color:
            rgba: 0.2, 0.6, 1, 1
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Line:
            width: 5
            circle: (self.center_x, self.center_y, 40)
        PopMatrix